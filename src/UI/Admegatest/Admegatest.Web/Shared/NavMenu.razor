<MudNavMenu Class="mud-width-full" Bordered="true" Color="Color.Primary">
    <MudText Typo="Typo.h6" Class="px-4">Admegatest</MudText>
    <AuthorizeView>
        <Authorized>
            <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">@(context.User.Identity?.Name)</MudText>
        </Authorized>
    </AuthorizeView>
    <MudDivider Class="my-2" />

    <AuthorizeView Roles="IsCustomer">
        <MudNavLink Href="/customer/home" Icon="@Icons.Filled.Home">Inicio</MudNavLink>
    </AuthorizeView>

    <AuthorizeView Roles="IsEmployee">
        <MudNavLink Href="/employee/home" Icon="@Icons.Filled.Home">Inicio</MudNavLink>
    </AuthorizeView>

    <MudNavGroup Title="Admin" Icon="@Icons.Filled.AdminPanelSettings" Expanded="true">
        <MudNavLink Href="/admin/user/list" Icon="@Icons.Filled.People">Usuarios</MudNavLink>
        <MudNavLink Href="/admin/user/roles" Icon="@Icons.Filled.BackHand">Roles</MudNavLink>
    </MudNavGroup>

</MudNavMenu>