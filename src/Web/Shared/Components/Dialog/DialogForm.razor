<EditForm Model="Model" OnValidSubmit="Submit">
    <FluentValidationValidator />
    <MudDialog>

        <TitleContent>
            <MudText Typo="Typo.h6">
                <MudIcon Icon="@Icon" Class="mr-3 mb-n1" />
                @Title
            </MudText>
        </TitleContent>

        <DialogContent>
            @Content
        </DialogContent>

        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Text" OnClick="Cancel">CANCELAR</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Success" ButtonType="ButtonType.Submit">
                GUARDAR
            </MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>
