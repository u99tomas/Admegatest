@using Web.Shared.Components.Card

<MudMenu Direction="Direction.Left" OffsetX="true" Dense="true" Class="mt-1 ml-4">
    <ActivatorContent>
        <MudAvatar Color="Color.Secondary">
            <AuthorizeView>
                <Authorized>
                    <MudText Typo="Typo.body2">@context.User.Identity.Name[0].ToString().ToUpper()</MudText>
                </Authorized>
            </AuthorizeView>
        </MudAvatar>
    </ActivatorContent>
    <ChildContent>
        <PersonCard Class="mt-n2" />
        <MudDivider Class="mb-2" />
        <MudListItem Text="Cerrar Sesión" Icon="@Icons.Material.Outlined.Login" OnClick="SignOff" />
    </ChildContent>
</MudMenu>
