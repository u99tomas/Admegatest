@using AdMegasoft.Web.Authentication
@using AdMegasoft.Web.Shared.Components.Cards
@using System.Security.Claims
@using global::Shared.Constants.Permission

<PersonCard Style="background-color: var(--mud-palette-drawer-background);color: var(--mud-palette-drawer-text);" />
<MudDivider Class="mb-4" />
<MudNavMenu>
    <MudText Typo="Typo.subtitle2" Color="Color.Inherit" Class="ml-4 my-3">Personal</MudText>
    <MudNavLink Href="/user/dashboard" Match="NavLinkMatch.All" Icon="@Icons.Material.Outlined.Dashboard">Dashboard</MudNavLink>
    <MudNavLink Href="/customer/account" Icon="@Icons.Material.Outlined.Person">Mi cuenta</MudNavLink>

    <MudText Typo="Typo.subtitle2" Color="Color.Inherit" Class="ml-4 my-3">Páginas</MudText>

    <MudNavGroup Title="Admin" Icon="@Icons.Outlined.AdminPanelSettings" Expanded="true">
        <AuthorizeView Roles=@Permissions.Users.View>
            <MudNavLink Href="/admin/users/list" Icon="@Icons.Outlined.People">Usuarios</MudNavLink>
        </AuthorizeView>
        <AuthorizeView Roles=@Permissions.Roles.View>
            <MudNavLink Href="/admin/roles/list" Icon="@Icons.Outlined.BackHand">Roles</MudNavLink>
        </AuthorizeView>
    </MudNavGroup>

</MudNavMenu>

