@page "/"
@page "/authentication/login"

@using AdMegasoft.Web.Pages.Authentication.Login.Components
@using AdMegasoft.Web.Shared.Layouts
@layout LoginLayout

<RedirectToDashboard></RedirectToDashboard>

<MudText Typo="Typo.h6" GutterBottom="true">Iniciar sesión</MudText>

<MudTextField @bind-Value="@_user" Label="Usuario" Variant="Variant.Outlined" Class="my-6"></MudTextField>

<PasswordField @bind-Password="@_password"></PasswordField>

<MudButton Variant="Variant.Filled" Class="mt-4" Color="Color.Primary"
           Size="Size.Large" FullWidth="true" OnClick=@LoginAsync>Iniciar sesión</MudButton>

@if (_error)
{
    <MudAlert Severity="Severity.Info" Class="mt-8 mud-width-full">El usuario ingresado es incorrecto</MudAlert>
}
