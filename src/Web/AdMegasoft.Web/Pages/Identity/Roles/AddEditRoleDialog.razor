<MudDialog>

    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
            Crear Rol
        </MudText>
    </TitleContent>

    <DialogContent>

        <MudForm Model="@AddEditRoleCommand" @ref="@_form">

            <MudTextField @bind-Value="@AddEditRoleCommand.Name"
                          Validation="@(_validator.ValidateValue)"
                          For="@(() => AddEditRoleCommand.Name)"
                          Immediate="true"
                          Label="Nombre"
                          Variant="Variant.Outlined"
                          Class="my-2" />

            <MudTextField @bind-Value="@AddEditRoleCommand.Description"
                          Validation="@(_validator.ValidateValue)"
                          For="@(() => AddEditRoleCommand.Description)"
                          Immediate="true"
                          Label="Descripción"
                          Variant="Variant.Outlined"
                          Lines="2"
                          Class="my-2" />
        </MudForm>

    </DialogContent>

    <DialogActions>
        <MudButton Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Success" OnClick=@SaveAsync>
            GUARDAR
        </MudButton>
    </DialogActions>

</MudDialog>
