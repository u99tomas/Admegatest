@using Application.Features.Roles.Queries.GetAllPaged
@using global::Shared.Constants.Permission
@attribute [Authorize(Roles = Permissions.Roles.View)]
@page "/identity/roles"


<MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-4">Roles</MudText>

<MudTable ServerData="@(new Func<TableState, Task<TableData<GetAllPagedRolesResponse>>>(ServerReload))"
          T="GetAllPagedRolesResponse" Loading="@_loading"
          Dense="true" Hover="true" Striped="true" @ref="_table">

    <ToolBarContent>

        <AuthorizeView Roles=@Permissions.Roles.Create>
            <MudButton DisableElevation Variant="Variant.Filled" Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.Add" IconColor="Color.Surface"
                       OnClick="@(() => ShowAddRoleDialogAsync())">
                CREAR
            </MudButton>
        </AuthorizeView>

        <MudSpacer />

        <MudTextField T="string" ValueChanged="@(s=>OnSearch(s))" Placeholder="Search" Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>

    <HeaderContent>
        <MudTh><MudTableSortLabel SortLabel="Name" T="GetAllPagedRolesResponse">Rol</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortLabel="Description" T="GetAllPagedRolesResponse">Descripción</MudTableSortLabel></MudTh>
        <MudTh Style="text-align:right">Acciones</MudTh>
    </HeaderContent>

    <RowTemplate>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Name">@context.Description</MudTd>
        <MudTd DataLabel="Actions" Style="text-align: right">
            <MudMenu Label="Acciones" Variant="Variant.Filled" DisableElevation="true" EndIcon="@Icons.Filled.KeyboardArrowDown" IconColor="Color.Secondary" Direction="Direction.Left" OffsetX="true">
                <MudMenuItem>Administrar permisos</MudMenuItem>
                <MudMenuItem @onclick="@(() => ShowAddRoleDialogAsync(@context.Id))">Editar</MudMenuItem>
                <MudMenuItem @onclick="@(() => Delete(@context))">Eliminar</MudMenuItem>
            </MudMenu>
        </MudTd>
    </RowTemplate>

    <NoRecordsContent>
        <MudText>No se encontraron registros coincidentes</MudText>
    </NoRecordsContent>

    <LoadingContent>
        <MudText>Cargando...</MudText>
    </LoadingContent>

    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>
