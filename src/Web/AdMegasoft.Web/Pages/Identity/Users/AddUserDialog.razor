<MudDialog>

    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
            Crear Usuario
        </MudText>
    </TitleContent>

    <DialogContent>

        <MudSelect T="int" Label="Roles" MultiSelection="true"
                   MultiSelectionTextFunc="@(new Func<List<string>, string>(GetMultiSelectionTextForRoles))"
                   @bind-SelectedValues="_selectedRoleIds">
            @foreach (var rol in _roles)
            {
                <MudSelectItem T="int" Value="@rol.Id">@rol.Name (@rol.Description)</MudSelectItem>
            }
        </MudSelect>


    </DialogContent>

    <DialogActions>
        <MudButton Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Success" OnClick=@SaveAsync>
            GUARDAR
        </MudButton>
    </DialogActions>

</MudDialog>


