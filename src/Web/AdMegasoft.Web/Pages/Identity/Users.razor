@using global::Shared.Constants.Permission
@attribute [Authorize(Roles = Permissions.Users.View)]
@page "/admin/users/list"
@using AdMegasoft.Application.Features.Users.Queries.GetAllPaged

<MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-4">Usuarios</MudText>

<MudTable ServerData="@(new Func<TableState, Task<TableData<GetAllUsersResponse>>>(ServerReload))" T="GetAllUsersResponse" Loading="@_loading"
          Dense="true" Hover="true" Striped="true" @ref="table">
    <ToolBarContent>
        <MudSpacer />
        <MudTextField T="string" ValueChanged="@(s=>OnSearch(s))" Placeholder="Search" Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh><MudTableSortLabel SortLabel="Name" T="GetAllUsersResponse">Usuario</MudTableSortLabel></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.Name</MudTd>
    </RowTemplate>
    <NoRecordsContent>
        <MudText>No se encontraron registros coincidentes</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>Cargando...</MudText>
    </LoadingContent>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>
