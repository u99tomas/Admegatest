@using AdMegasoft.Web.Enums
@using AdMegasoft.Web.Shared.Components.Dialogs

<MegaDialog EntityName="Rol" Operation=@(AddEditRoleCommand.Id == 0? Operation.Add : Operation.Edit) OnConfirmation=@SaveAsync>
    <Content>
        <MudForm Model="@AddEditRoleCommand" @ref="@_form">

            <MudTextField @bind-Value="@AddEditRoleCommand.Name"
                          Validation="@(_validator.ValidateValue)"
                          For="@(() => AddEditRoleCommand.Name)"
                          Immediate="true"
                          Label="Nombre"
                          Variant="Variant.Outlined"
                          Class="my-2" />

            <MudTextField @bind-Value="@AddEditRoleCommand.Description"
                          Validation="@(_validator.ValidateValue)"
                          For="@(() => AddEditRoleCommand.Description)"
                          Immediate="true"
                          Label="Descripción"
                          Variant="Variant.Outlined"
                          Lines="2"
                          Class="my-2" />
        </MudForm>
    </Content>
</MegaDialog>