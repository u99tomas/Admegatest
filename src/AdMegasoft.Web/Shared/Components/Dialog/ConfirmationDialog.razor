<MudDialog>

    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Warning" Class="mr-3 mb-n1" />
            Advertencia
        </MudText>
    </TitleContent>

    <DialogContent>
        Esta operación no podrá ser revertida.
    </DialogContent>

    <DialogActions>
        <MudButton DisableElevation Variant="Variant.Text" OnClick="Cancel">CANCELAR</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Confirm">
            CONFIRMAR
        </MudButton>
    </DialogActions>

</MudDialog>


@code
{
    [CascadingParameter]
    private MudDialogInstance _mudDialog { get; set; }

    private void Confirm()
    {
        _mudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel()
    {
        _mudDialog.Cancel();
    }
}