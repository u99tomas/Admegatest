<MudDialog>

    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icon" Class="mr-3 mb-n1" />
            @Title
        </MudText>
    </TitleContent>

    <DialogContent>
        @Content
    </DialogContent>

    <DialogActions>
        <MudButton DisableElevation Variant="Variant.Filled" OnClick="Cancel">CANCELAR</MudButton>
        <MudButton DisableElevation Variant="Variant.Filled" Color="Color.Success" OnClick="SaveAsync">
            GUARDAR
        </MudButton>
    </DialogActions>

</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance _mudDialog { get; set; }

    [Parameter]
    public RenderFragment Content { get; set; }

    [Parameter]
    public RenderFragment Title { get; set; }

    [Parameter]
    public string Icon { get; set; }

    [Parameter]
    public EventCallback OnSave { get; set; }

    private async Task SaveAsync()
    {
        await OnSave.InvokeAsync();
    }

    private void Cancel()
    {
        _mudDialog.Cancel();
    }
}