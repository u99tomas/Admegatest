<MudCard Elevation="0" Square="true" Class="@Class">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Color="Color.Secondary">
                <AuthorizeView>
                    <Authorized>
                        <MudText Typo="Typo.body2">@context.User.Identity.Name[0].ToString().ToUpper()</MudText>
                    </Authorized>
                </AuthorizeView>
            </MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <AuthorizeView>
                <Authorized>
                    <MudText Typo="Typo.body2">@context.User.Identity.Name</MudText>
                </Authorized>
            </AuthorizeView>
        </CardHeaderContent>
    </MudCardHeader>
</MudCard>

@code {
    [Parameter] public string Class { get; set; }
}