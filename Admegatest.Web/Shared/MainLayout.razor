@using Admegatest.Web.Components.AuthenticationAndAuthorization
@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<PageTitle>Admegatest</PageTitle>

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<AuthorizeView>

    <Authorized>
        <MudLayout>
            <MudAppBar>
                <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
            </MudAppBar>
            <MudDrawer @bind-Open="@_drawerOpen">
                <NavMenu />
            </MudDrawer>
            <MudMainContent>
                @Body
            </MudMainContent>
        </MudLayout>
    </Authorized>

    <NotAuthorized>
        <RedirectToLogin></RedirectToLogin>
    </NotAuthorized>

</AuthorizeView>