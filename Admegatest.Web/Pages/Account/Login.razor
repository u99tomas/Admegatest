@page "/login"
@using System.Text.RegularExpressions
@using System.ComponentModel.DataAnnotations


<div style="width: 23rem; height: 40rem;">
    <MudCard>
        <MudCardContent>
            <MudForm >
                <MudTextField T="string" Label="Email" Required="true" RequiredError="Email is required!"
                              Validation="@(new EmailAddressAttribute() {ErrorMessage = "La dirección de correo electrónico es inválida"})"/>
                <MudTextField T="string" Label="Password" @ref="pwField1"
                              InputType="InputType.Password"
                               Required="true"
                              RequiredError="¡Se requiere contraseña!"/>
            </MudForm>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@(!success)" Class="ml-auto">Iniciar sesión</MudButton>
        </MudCardActions>
    </MudCard>
    
</div>

@code {
    bool success;
    string[] errors = { };
    MudTextField<string> pwField1;
    MudForm form;

}